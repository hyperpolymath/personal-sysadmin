{
  "defaultAction": "SCMP_ACT_ERRNO",
  "defaultErrnoRet": 1,
  "archMap": [
    {
      "architecture": "SCMP_ARCH_X86_64",
      "subArchitectures": [
        "SCMP_ARCH_X86",
        "SCMP_ARCH_X32"
      ]
    },
    {
      "architecture": "SCMP_ARCH_AARCH64",
      "subArchitectures": [
        "SCMP_ARCH_ARM"
      ]
    }
  ],
  "syscalls": [
    {
      "comment": "Allow basic process operations",
      "names": [
        "read",
        "write",
        "close",
        "fstat",
        "lseek",
        "mmap",
        "mprotect",
        "munmap",
        "brk",
        "pread64",
        "pwrite64",
        "access",
        "pipe",
        "select",
        "sched_yield",
        "mremap",
        "msync",
        "mincore",
        "madvise"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow file operations (read-only for most)",
      "names": [
        "openat",
        "stat",
        "lstat",
        "fstat",
        "newfstatat",
        "readlink",
        "readlinkat",
        "getdents64",
        "getcwd",
        "chdir",
        "fchdir"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow network (internal only)",
      "names": [
        "socket",
        "connect",
        "accept",
        "sendto",
        "recvfrom",
        "sendmsg",
        "recvmsg",
        "shutdown",
        "bind",
        "listen",
        "getsockname",
        "getpeername",
        "socketpair",
        "setsockopt",
        "getsockopt"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow process monitoring",
      "names": [
        "getpid",
        "getppid",
        "getuid",
        "geteuid",
        "getgid",
        "getegid",
        "gettid",
        "getrlimit",
        "getrusage",
        "times",
        "sysinfo",
        "uname"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow async I/O",
      "names": [
        "epoll_create1",
        "epoll_ctl",
        "epoll_wait",
        "epoll_pwait",
        "epoll_pwait2",
        "poll",
        "ppoll",
        "eventfd2"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow threading",
      "names": [
        "clone",
        "clone3",
        "futex",
        "set_robust_list",
        "get_robust_list",
        "nanosleep",
        "clock_nanosleep",
        "clock_gettime",
        "clock_getres"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow signal handling",
      "names": [
        "rt_sigaction",
        "rt_sigprocmask",
        "rt_sigreturn",
        "sigaltstack"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow memory operations",
      "names": [
        "getrandom",
        "memfd_create",
        "mlock",
        "munlock"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow process exit",
      "names": [
        "exit",
        "exit_group"
      ],
      "action": "SCMP_ACT_ALLOW"
    },
    {
      "comment": "Allow /proc reading",
      "names": [
        "openat"
      ],
      "action": "SCMP_ACT_ALLOW",
      "args": [
        {
          "index": 1,
          "value": 0,
          "valueTwo": 0,
          "op": "SCMP_CMP_EQ"
        }
      ]
    }
  ]
}
